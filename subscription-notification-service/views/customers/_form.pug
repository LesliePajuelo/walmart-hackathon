.form-group
  label.col-sm-4.control-label(for='inputCid') Customer Id *
  .col-sm-8
    input#inputCid.form-control(type='text', name='cid', placeholder='Customer Id', required='', data-parsley-maxlength='20', data-parsley-maxlength-message="This field can't have more than 20 characters", value=customer.cid)
.form-group
  label.col-sm-4.control-label(for='inputName') Name *
  .col-sm-8
    input#inputName.form-control(type='text', name='name', placeholder='Name', required='', data-parsley-maxlength='20', data-parsley-maxlength-message="This field can't have more than 20 characters", value=customer.name)
.form-group
  label.col-sm-4.control-label(for='inputPhoneNumber') Phone Number
  .col-sm-8
    input#inputPhoneNumber.form-control(type='number', name='phoneNumber', placeholder='Phone Number', required='', value=customer.phoneNumber)
.form-group
  label.col-sm-4.control-label(for='time') Appointment Date
  .col-sm-8
    input#inputDate.form-control(type='text', name='time', placeholder='Pick a Date', required='', value=moment(customer.time).format('MM-DD-YYYY hh:mma'))

.form-group
  label.col-sm-4.control-label(for='inputItem') Item
  .col-sm-8
    input#inputItem.form-control(type='text', name='item', placeholder='Item Id', required='', value=customer.item)
.form-group
  label.col-sm-4.control-label(for='inputItemName') Item Name
  .col-sm-8
    input#inputItemName.form-control(type='text', name='itemName', placeholder='Item Name', required='', value=customer.itemName)

.form-group
  label.col-sm-4.control-label(for='inpuPeriod') Appointment Date
  .col-sm-8
    input#inpuPeriod.form-control(type='text', name='period', placeholder='Period', required='', value=customer.period)
.form-group
  label.col-sm-4.control-label(for='selectNotification') Notification Time
  .col-sm-8
    select#selectDelta.form-control(name='notification', required='', value=customer.notification)
      option(selected=customer.notification == '', value='') Select a time
      option(selected=customer.notification == '15', value='15') 15 Minutes
      option(selected=customer.notification == '30', value='30') 30 Minutes
      option(selected=customer.notification == '45', value='45') 45 Minutes
      option(selected=customer.notification == '60', value='60') 60 Minutes
.form-group
  label.col-sm-4.control-label(for='selectTimeZone') Time Zone
  .col-sm-8
    select#selectTimeZone.form-control(name='timeZone', required='', value=customer.timeZone)
      each zone in timeZones
        option()
        option(selected=zone == customer.timeZone, value="#{zone}") !{zone}
